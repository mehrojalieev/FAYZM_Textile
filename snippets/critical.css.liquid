:root,
::after,
::before {
  --transition-1-time: 0.3s;
  --transition-2-time: calc(var(--transition-1-time) * 2);
  --transition-1: var(--transition-1-time) ease;
  --transition-2: var(--transition-2-time) ease;
  --font-1: "semplicitapro", sans-serif;
  --font-2: "essonnes-display", serif;
  --font-size-base: 16px;
  --distance-base: 2.5rem;
  --color-error: #a6192e;
  --rte-page-container: 41.75rem;
}

@media only screen and (max-width: 767px) {
  :root {
    --distance-base: 1.5rem;
  }
}
@media only screen and (max-width: 479px) {
  :root {
    --distance-base: 1rem;
  }
}
@media only screen and (max-width: 767px) {
  :root {
    --distance-base: 1.5rem;
  }
}
@media only screen and (max-width: 479px) {
  :root {
    --distance-base: 1.15rem;
  }
}
*,
::after,
::before {
  box-sizing: border-box;
}

:where(ol[class], ul[class]) {
  padding: 0;
}

:where(blockquote, body, dd, dl, figcaption, figure, h1, h2, h3, h4, li, ol[class], p, ul[class]) {
  margin: 0;
}

html {
  font-family: var(--font-1);
}

body {
  line-height: 1.5;
  scroll-behavior: smooth;
  text-rendering: optimizespeed;
  min-height: var(--initial-viewport-height, 100vh);
  overflow-x: hidden;
}

:where(ol[class], ul[class]) {
  list-style: none;
}

:where(a:not([class])) {
  text-decoration-skip-ink: auto;
}

:where(img) {
  display: block;
  max-width: 100%;
}

:where(article > * + *) {
  margin-top: 1em;
}

:where(modal-dialog) {
  display: none;
}

a,
button,
input,
select,
textarea {
  transition: color var(--transition-1), opacity var(--transition-1), background-color var(--transition-1), border-color var(--transition-1), transform var(--transition-1);
}

button,
input,
select,
textarea {
  font: inherit;
}

button[type] {
  cursor: pointer;
}

@media (prefers-reduced-motion: reduce) {
  * {
    transition-duration: 0s !important;
    animation-duration: 0s !important;
    animation-iteration-count: 1 !important;
    scroll-behavior: auto !important;
  }
}
html {
  font-weight: 500;
  line-height: 136%;
  scroll-behavior: smooth;
  font-family: var(--font-1, "sans-serif");
  font-weight: 500;
  font-size: 100% !important;
}

p a {
  color: inherit;
}

h1,
.h1,
h2,
.h2,
h3,
.h3,
h4,
.h4 {
  font-family: inherit;
  font-weight: bold;
  text-transform: uppercase;
}

h5,
.h5 {
  font-family: inherit;
  font-weight: normal;
  text-transform: uppercase;
}

h6,
.h6 {
  font-family: inherit;
  font-weight: normal;
  text-transform: uppercase;
}

h1,
.h1 {
  font-size: 5.5rem;
  line-height: 95%;
}

h2,
.h2 {
  font-size: 3.75rem;
  line-height: 95%;
}

h3,
.h3 {
  font-size: 2.5rem;
  line-height: 3rem;
}

h4,
